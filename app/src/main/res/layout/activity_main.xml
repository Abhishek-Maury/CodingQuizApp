<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#00B0FF"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:background="#00B0FF"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a Subject"
                    android:textSize="23sp"
                    android:layout_marginStart="12dp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="12sp"
                    android:text="Start your coding journey"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/splash"/>


      </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_view_design"
        android:layout_marginTop="25dp">

        <ScrollView
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="java"
                        android:id="@+id/javaCard"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/javaImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/java"/>
                            <TextView
                                android:id="@+id/javaText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JAVA"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="kotlin"
                        android:id="@+id/kotlinCard"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/kotlinImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/kotlin"/>
                            <TextView
                                android:id="@+id/kotlinText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kotlin"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="python"
                        android:id="@+id/pythonCard"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pythonImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/python"/>
                            <TextView
                                android:id="@+id/pythonText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Python"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="cpp"
                        android:id="@+id/cppCard"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cppImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/cplus"/>
                            <TextView
                                android:id="@+id/cppText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C++"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="dart"
                        android:id="@+id/dartCard"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/dartImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/dart"/>
                            <TextView
                                android:id="@+id/dartText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dart"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="sql"
                        android:id="@+id/sqlCard"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/sqlImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:src="@drawable/sql"/>
                            <TextView
                                android:id="@+id/sqlText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SQL"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:onClick="xml"
                        android:id="@+id/xmlCard"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:id="@+id/xmlImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/xml"/>
                            <TextView
                                android:id="@+id/xmlText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XML"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:onClick="c"
                        android:id="@+id/cCard"
                        android:layout_width="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        android:backgroundTint="#74776E6E"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/cImage"
                                android:layout_marginTop="20dp"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/c"/>
                            <TextView
                                android:id="@+id/cText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="20sp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>





</LinearLayout>